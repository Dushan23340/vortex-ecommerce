# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Cloudinary Configuration
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret  
CLOUDINARY_NAME=your_cloudinary_cloud_name

# Security
JWT_SECRET=your_very_long_jwt_secret_at_least_64_characters_long
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_strong_admin_password

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_16_character_app_password
EMAIL_FROM_NAME=Vortex Clothing

# URLs (Update for production)
FRONTEND_URL=http://localhost:5175
BACKEND_URL=http://localhost:4000

# PayHere Configuration
# For development - use these test credentials
# For production - replace with your actual merchant credentials
PAYHERE_MERCHANT_ID=1211149
PAYHERE_MERCHANT_SECRET=sandbox_secret

# Server Configuration
PORT=4000
NODE_ENV=development