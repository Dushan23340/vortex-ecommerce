# Backend Environment Variables for Vercel Deployment
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vortex_production

# Cloudinary Configuration (for image uploads)
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_NAME=your_cloudinary_cloud_name

# Authentication
JWT_SECRET=your_super_long_random_jwt_secret_at_least_64_characters_long_here

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_strong_admin_password

# Email Service Configuration (for password reset emails)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@yourdomain.com
EMAIL_APP_PASSWORD=your_gmail_app_password
EMAIL_FROM_NAME=Vortex Clothing

# Application URLs (update after deployment)
FRONTEND_URL=https://your-frontend-domain.vercel.app
BACKEND_URL=https://your-backend-domain.vercel.app

# PayHere Payment Gateway Configuration
PAYHERE_MERCHANT_ID=your_payhere_merchant_id
PAYHERE_MERCHANT_SECRET=your_payhere_merchant_secret

# Server Configuration
PORT=4000
NODE_ENV=production