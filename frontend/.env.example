# Frontend Environment Variables for Vercel Deployment
# Copy this file to .env and fill in your actual values

# Backend API Configuration (update after backend deployment)
VITE_BACKEND_URL=https://your-backend-domain.vercel.app
VITE_API_URL=https://your-backend-domain.vercel.app/api

# PayHere Payment Gateway Configuration
VITE_PAYHERE_MERCHANT_ID=your_payhere_merchant_id
VITE_PAYHERE_MERCHANT_SECRET=your_payhere_merchant_secret
VITE_PAYHERE_SANDBOX=false

# Build Configuration
NODE_ENV=production